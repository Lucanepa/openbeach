{
  "name": "escoresheet",
  "version": "0.1.0",
  "description": "OpenBeach eScoresheet - Offline-first beach volleyball scoresheet application",
  "author": "OpenBeach",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:https": "set VITE_HTTPS=true && vite",
    "dev:tunnel": "concurrently \"npm run dev\" \"npm run ngrok\"",
    "ngrok": "ngrok http 6173",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "dexie": "^4.0.8",
    "dexie-react-hooks": "^1.1.7",
    "flag-icons": "^7.5.0",
    "html2canvas": "^1.4.1",
    "i18n-iso-countries": "^7.14.0",
    "i18next": "^25.7.4",
    "jspdf": "^4.0.0",
    "jszip": "^3.10.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.530",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^24.9.1",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "ngrok": "^5.0.0-beta.2",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "app.openbeach.escoresheet",
    "productName": "OpenBeach eScoresheet",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "artifactName": "OpenBeach-eScoresheet-Setup.${ext}",
      "publisherName": "OpenBeach"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.sports",
      "artifactName": "OpenBeach-eScoresheet.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
